<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>

  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <div class="form-group">
        <h1><%- wiki.title %></h1>
        <% if (wiki.private) { %>
          <small class="text-muted">Private Wiki</small>
        <% } else { %>
          <small class="text-muted">Public Wiki</small>
        <% } %>
      </div>

      <% include ../static/partials/messages.ejs %>

      <div class="form-group">
        <% if (currentUser) { %>
          <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning">Edit</a>

          <form style="display:initial" action="/wikis/<%= wiki.id %>/destroy" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>

          <a href="/wikis/<%= wiki.id %>/new" class="btn btn-warning">Add Collaborator</a>
        <% } %>
      </div>

      <p><%- wiki.body %></p>

      <hr>

      <a href="/wikis">
        <button>Return To All Wikis</button>
      </a>
    </main>

    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
